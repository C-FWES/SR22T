<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -20 </chase-distance-m>

  <view n="100">
    <name>Copilot Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
       <x-offset-m archive="y">  0.28 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.505 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -1.421 </z-offset-m>	<!-- Back  -->
      <pitch-offset-deg> -7 </pitch-offset-deg>
<!--  <default-field-of-view-deg> 75 </default-field-of-view-deg>  -->
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>
  <view n="101">
    <name>Passenger Left Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
       <x-offset-m archive="y">  -0.28 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.36853 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -0.65308 </z-offset-m>	<!-- Back  -->
      <pitch-offset-deg> -7 </pitch-offset-deg>
<!--  <default-field-of-view-deg> 75 </default-field-of-view-deg>  -->
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>
  <view n="102">
    <name>Passenger Right Seat View</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
       <x-offset-m archive="y">  0.28 </x-offset-m>	<!-- Right -->
       <y-offset-m archive="y">  0.36853 </y-offset-m>	<!-- Up    -->
       <z-offset-m archive="y"> -0.65308 </z-offset-m>	<!-- Back  -->
      <pitch-offset-deg> -7 </pitch-offset-deg>
<!--  <default-field-of-view-deg> 75 </default-field-of-view-deg>  -->
      <dynamic-view type="bool">true</dynamic-view>
    </config>
  </view>

  <view n="103">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y"> 1.000 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 2.882 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
<!--  <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg> -->
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
       <x-offset-m archive="y"> -0.27 </x-offset-m>	
       <y-offset-m archive="y">  0.51 </y-offset-m>	
       <z-offset-m archive="y"> -1.09 </z-offset-m>	
       <pitch-offset-deg> -7 </pitch-offset-deg>
 <!--  <default-field-of-view-deg> 75 </default-field-of-view-deg> -->
    </config>
  </view>
  
  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double">0</target-z-offset-m>
    </config>
  </view>

</PropertyList>
