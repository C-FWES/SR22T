	<!--IGNITION KEY-->
	<animation>
		<type>pick</type>
		<object-name>ignition_bg</object-name>
		<object-name>ignition_turn</object-name>
		<action>
			<name>get_key</name>
			<button>0</button>
			<binding>
				<condition>
					<equals>
						<property>/controls/engines/engine/magnetos</property>
						<value>0</value>
					</equals>
					<not>
						<property>/controls/engines/engine/starter</property>
					</not>
				</condition>
				<command>property-toggle</command>
				<property>/controls/engines/key</property>
			</binding>
		</action>
		<hovered>
			<binding>
				<condition>
					<equals>
						<property>/controls/engines/engine/magnetos</property>
						<value>0</value>
					</equals>
					<not>
						<property>/controls/engines/engine/starter</property>
					</not>
				</condition>
				<command>set-tooltip</command>
				<tooltip-id>get-key</tooltip-id>
				<label>Put key</label>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>select</type>
		<object-name>ignition_key</object-name>
		<object-name>start</object-name>
		<condition>
			<property>/controls/engines/key</property>
		</condition>
	</animation>
	<!-- Magneto switch -->
	<animation>
		<type>knob</type>
		<object-name>ignition_key</object-name>
		<visible>true</visible>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>/controls/engines/engine/magnetos</property>
				<factor>1</factor>
				<min>0</min>
				<max>3</max>
			</binding>
		</action>
		<!--
        <increase>
            <binding>
                <command>nasal</command>
                <script>c172p.click("magneto-forward")</script>
            </binding>
        </increase>
        <decrease>
            <binding>
                <command>nasal</command>
                <script>c172p.click("magneto-back")</script>
            </binding>
        </decrease>-->
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>magneto-switch</tooltip-id>
				<label>Magnetos: %s</label>
				<property>controls/engines/engine/magnetos</property>
				<mapping>nasal</mapping>
				<script>
                    var m = arg[0];
                    if (m == 1) return 'RIGHT';
                    if (m == 2) return 'LEFT';
                    if (m == 3) return 'BOTH';
                    return 'OFF';
                </script>
			</binding>
		</hovered>
	</animation>
	<!-- Starter -->
	<animation>
		<type>pick</type>
