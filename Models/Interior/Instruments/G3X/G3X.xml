<PropertyList>

<path>G3X.ac</path>
<animation>
	<type>pick</type>
	<object-name>G3X.screen</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>nasal</command>
			<script>canvas_g3x.showG3X();</script>
		</binding>
	</action>
</animation>

<!--Left (main) knob-->
    <animation>
        <type>knob</type>
        <object-name>knobL.big</object-name><!--
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>-800</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.03</y-m>
            <z-m>-0.0306</z-m>
        </center>-->
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/PFD/altitude-bug</property>
                <factor>100</factor>
                <min>0</min>
                <max>40000</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>alt-bug</tooltip-id>
		<label>PFD Altitude Bug: %s</label>
                <property>/instrumentation/PFD/altitude-bug</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>knobL.small</object-name><!--
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>-800</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.03</y-m>
            <z-m>-0.0306</z-m>
        </center>-->
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/heading-indicator/heading-bug-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hdg-bug</tooltip-id>
                <label>PFD HSI Bug: %s</label>
		<mapping>heading</mapping>
                <property>instrumentation/heading-indicator/heading-bug-deg</property>
            </binding>
        </hovered>
    </animation>
    <!--Right (alternate) knob-->
    <animation>
        <type>knob</type>
        <object-name>knobR.big</object-name><!--
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>-800</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.03</y-m>
            <z-m>-0.0306</z-m>
        </center>-->
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <factor>1</factor>
                <min>950</min>
                <max>1050</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>alt-setting</tooltip-id>
		<label>PFD Altitude QNH: %1.0f hPa</label>
                <property>/instrumentation/altimeter/setting-hpa</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>knobR.small</object-name><!--
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>-800</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>-0.03</y-m>
            <z-m>-0.0306</z-m>
        </center>-->
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/nav/radials/selected-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hdg-bug</tooltip-id>
                <label>NAV1 Radial: %s</label>
		<mapping>heading</mapping>
                <property>/instrumentation/nav/radials/selected-deg</property>
            </binding>
        </hovered>
    </animation>
    
</PropertyList>
